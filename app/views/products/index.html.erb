<h1>Listing products</h1>

<table>
  <thead>
    <tr>
     <th>Name</th>
     <th>Description</th>
     <th>Image</th>
     <th>Image URL</th>
     <th>Color</th>
     <th>Price</th>
     <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td class="img_url"><%= product.description %></td>
        <td><%= image_tag(product.image_url, style: "max-height: 200px; max-width: 200px;") %></td>
        <td class="product-image"><%= product.image_url %></td>
        <td><%= product.color %></td>
        <td><%= product.price %></td>
        <td></td>
      </tr> 
      <% end %> 
       
  </tbody>
</table>
<br>



<%= link_to 'New Product', new_product_path %>
<br>
<% cache do %>
  All availiable products:
  <% Product.all.each do |p| %>
    <% link_to p.name, product_url(p) %>
  <% end %>
<% end %>    