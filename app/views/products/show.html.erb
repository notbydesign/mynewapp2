<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= link_to image_tag(@product.image_url, width: 400, height: 200), @product.image_url, :class => 'fancybox' %>
</p>

<p>
	<strong>Color:</strong>
	<%= @product.color %>
</p>

<p>
	<strong>Price:</strong>
	<%=@product.price %>
</p>	



<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>	

<%= form_tag("/payments/create", remote: true) do %>
  <%= render partial: "shared/stripe_checkout_button" %>
<% end %>  

<%= render 'new_comment' %>
<%= render 'comments' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
